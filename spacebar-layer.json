{
  "description": "Spacebar layer: Navigation keys (arrows, word, select, home/end, pgup/dn)",
  "manipulators": [
    {
      "type": "basic",
      "from": {
        "key_code": "spacebar",
        "modifiers": { "optional": ["any"] }
      },
      "to_if_alone": [
        { "key_code": "spacebar", "halt": true },
        {
          "set_variable": {
            "name": "spacebar_modifier",
            "value": 0
          }
        }
      ],
      "to": [
        {
          "set_variable": {
            "name": "spacebar_modifier",
            "value": 1
          }
        }
      ],
      "to_after_key_up": [
        {
          "set_variable": {
            "name": "spacebar_modifier",
            "value": 0
          }
        }
      ],
      "parameters": {
        "basic.to_if_alone_timeout_milliseconds": 500
      }
    },
    {
      "from": {
        "key_code": "k"
      },
      "to": [
        {
          "key_code": "left_arrow"
        }
      ],
      "conditions": [
        {
          "type": "variable_if",
          "name": "spacebar_modifier",
          "value": 1
        }
      ],
      "type": "basic"
    },
    {
      "from": {
        "key_code": "o"
      },
      "to": [
        {
          "key_code": "up_arrow"
        }
      ],
      "conditions": [
        {
          "type": "variable_if",
          "name": "spacebar_modifier",
          "value": 1
        }
      ],
      "type": "basic"
    },
    {
      "from": {
        "key_code": "semicolon"
      },
      "to": [
        {
          "key_code": "right_arrow"
        }
      ],
      "conditions": [
        {
          "type": "variable_if",
          "name": "spacebar_modifier",
          "value": 1
        }
      ],
      "type": "basic"
    },
    {
